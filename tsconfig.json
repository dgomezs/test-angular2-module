{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "mapRoot": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "dist"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": false
  }
}
